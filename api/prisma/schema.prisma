// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Org {
  id             String @id @default(uuid())
  name           String
  email          String
  address        String
  cep            String
  whatsappNumber String
  password       String
  Pets           Pet[]

  @@map("orgs")
}

model Pet {
  id                   String                 @id @default(uuid())
  name                 String
  description          String
  city                 String
  age                  String
  energy               Int
  size                 String
  independence         String
  type                 String
  photo                String
  orgId                String
  org                  Org                    @relation(fields: [orgId], references: [id])
  pets                 PetGallery[]
  adoptionRequirements AdoptionRequirements[]

  @@map("pets")
}

model PetGallery {
  id    String @id @default(uuid())
  image String
  pet   Pet    @relation(fields: [petId], references: [id])
  petId String

  @@map("pet_gallery")
}

model AdoptionRequirements {
  id    String @id @default(uuid())
  title String
  pet   Pet    @relation(fields: [petId], references: [id])
  petId String
}
